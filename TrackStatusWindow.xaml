<Window x:Class="CMCS4.TrackStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Track Claim Status" Height="400" Width="600" Background="#800080">

    <Grid Margin="10">
        <ListBox x:Name="ClaimsStatusListBox" Height="300" Margin="0,0,0,10" Background="Black" Foreground="White">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Display}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>

