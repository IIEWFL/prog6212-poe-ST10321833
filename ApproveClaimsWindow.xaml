<Window x:Class="CMCS4.ApproveClaimsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Approve Claims" Height="400" Width="600" Background="#800080">

    <Grid Margin="10">
        
        <ListBox x:Name="ClaimsListBox" Height="300" Margin="0,0,0,10" Background="Black" Foreground="White"/>

       
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,239,0,0">
            <Button Content="Approve" Width="100" Click="Approve_Click" Height="46" Margin="10" Background="#800080" Foreground="White"/>
            <Button Content="Reject" Width="100" Click="Reject_Click" Height="46" Margin="10" Background="#800080" Foreground="White"/>
            <Button Content="Close" Width="100" Click="Close_Click" Height="46" Margin="10" Background="#800080" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
