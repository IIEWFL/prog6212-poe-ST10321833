<Window x:Class="CMCS4.UploadDocumentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Upload Supporting Documents" Height="300" Width="400" Background="Black">

    <Grid>
        <StackPanel Margin="20,20,20,20" RenderTransformOrigin="0.499,0.421">
            <TextBlock Text="Upload Supporting Document" FontSize="20" HorizontalAlignment="Center" Foreground="#f0f" Height="70"/>

           
            <Button Content="Select File" Click="SelectFile_Click" HorizontalAlignment="Center" Background="#800080" Foreground="White" Width="150" Height="35"/>
            <TextBlock x:Name="FileNameTextBlock" Text="No file selected" Foreground="#f0f" Height="37" Width="355"/>
            <Button Content="Upload" Click="Upload_Click" Background="#800080" Foreground="White" Width="150" Height="35" RenderTransformOrigin="0.498,0.531"/>

        </StackPanel>
    </Grid>
</Window>
